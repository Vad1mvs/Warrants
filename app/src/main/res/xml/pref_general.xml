    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_server_list_titles"
        android:entryValues="@array/pref_server_list_values"
        android:key="server_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_connect_2_server" />
    
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_arbitrary_server_addr"
        android:inputType="textUri"
        android:key="server_addr"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_arbitrary_server_addr" />
    
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_location_provider_list_titles"
        android:entryValues="@array/pref_location_provider_list_values"
        android:key="location_provider_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_location_provider" />
    
</PreferenceScreen>