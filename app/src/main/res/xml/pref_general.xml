<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_key_logging"
        android:summary="@string/pref_description_logging"
        android:title="@string/pref_title_logging" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_key_emp_time_mark"
        android:summary="@string/pref_description_emp_time_mark"
        android:title="@string/pref_title_emp_time_mark" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_key_warr_report"
        android:summary="@string/pref_description_warr_report"
        android:title="@string/pref_title_warr_report" />
    
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
