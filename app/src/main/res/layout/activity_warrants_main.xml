<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".WarrantsActivity" >

    <RelativeLayout
        android:id="@+id/footer_layout"
   			android:layout_alignParentLeft="true"
		  	android:layout_alignParentBottom="true"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_footer_bg" >

		    <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:typeface="sans"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
    		<TextView
		        android:id="@+id/srv_err_msg"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_below="@+id/title_text"
		        android:layout_marginBottom="1dp"
		        android:typeface="sans"
		        android:textSize="14sp" />
				<TextView
		        android:id="@+id/repl_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
						android:layout_alignParentLeft="true"
		        android:layout_below="@+id/srv_err_msg"
		        android:layout_marginBottom="4dp"
		        android:typeface="sans"
		        android:textSize="14sp" />

        <ImageButton
		        android:id="@+id/w_get_imageButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
					  android:layout_alignParentRight="true"
					  android:visibility="visible"
                android:src="@android:drawable/stat_notify_sync"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:onClick="btnOne"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/w_get_imageButton"
            android:src="@drawable/list9"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:onClick="btnTwo"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/w_get_imageButton"
            android:src="@drawable/list8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            android:onClick="btnThree"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/w_get_imageButton"
            android:src="@drawable/list4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWarr"
            android:textColor="#dbce16"
            android:layout_above="@+id/srv_err_msg"
            android:layout_toRightOf="@+id/title_text"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:text="ВСЕ НАРЯДЫ"/>

    </RelativeLayout>



    <EditText
       android:id="@+id/editTextFilter"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/m_search"
       android:inputType="textVisiblePassword"
       android:layout_alignParentLeft="true"
			 android:layout_above="@+id/footer_layout"
       android:ems="10" >
    </EditText>

		<android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextFilter"
            >
		    <ListView
		        android:id="@+id/listViewWarrants"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
						android:divider="#b5b5b5"
		        android:dividerHeight="1dp"
		        android:listSelector="@drawable/list_selector"/>

        </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>