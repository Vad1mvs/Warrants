<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal" 
		android:background="@drawable/list_selector"
		android:padding="2dip"> 

		<TextView
		    android:id="@+id/lineNo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:textSize="12sp"
		    android:text="No" />

		<TextView
		    android:id="@+id/lineState"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:text="Статус"
		    android:textSize="12sp"
		    android:textStyle="italic" />
 
		<TextView 
				android:id="@+id/lineDate" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
	      android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
		    android:textSize="12sp"
		    android:text="Date" /> 

		<TextView
		    android:id="@+id/lineEntName"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/lineNo"
		    android:layout_below="@+id/lineNo"
		    android:gravity="center_horizontal"
		    android:text="Заказчик/Адрес"
		    android:textColor="@color/blue"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/lineEqName"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/lineEntName"
		    android:layout_below="@+id/lineEntName"
		    android:gravity="center_horizontal"
		    android:text="Оборудование"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/lineEqInfo"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/lineEqName"
		    android:layout_below="@+id/lineEqName"
		    android:gravity="center_horizontal"
		    android:text="Addr"
		    android:textSize="12sp"
		    android:textStyle="italic" />
		
		<TextView
		    android:id="@+id/lineSealSetDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/lineEqInfo"
		    android:text="set"
		    android:textSize="12sp"
		    android:textStyle="normal" />
						
		<TextView
		    android:id="@+id/lineSealBrokenDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/lineEqName"
		    android:layout_below="@+id/lineEqInfo"
		    android:text="broken"
		    android:textSize="12sp"
		    android:textStyle="normal" />
						
		<TextView
		    android:id="@+id/lineMoney"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_below="@+id/lineEqInfo"
		    android:text="money"
		    android:textSize="12sp"
		    android:textStyle="normal" />
		
		<TextView
		    android:id="@+id/lineSeals"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/lineEqName"
		    android:layout_below="@+id/lineMoney"
		    android:gravity="center_horizontal"
		    android:text="Seals"
		    android:textSize="12sp"
		    android:textStyle="italic" />
				
						
		<!-- Rightend Arrow -->
     <ImageView 
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gray_right_arrow1" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
		
		<TextView
		    android:id="@+id/lineCntr"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/right_arrow"
		    android:paddingRight="10px"
		    android:text="Пломб"
		    android:textSize="14sp"
		    android:textStyle="bold|italic" />
     
 
</RelativeLayout>
