<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/linearLayout"
                android:background="@drawable/gradient_bg"
    tools:context=".BarScanActivity" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backToUpdateForm"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/gradient_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvTitle1"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvTitle2"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:id="@+id/linearList"
        android:visibility="gone"
        android:background="@drawable/gradient_bg_done_lt"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="ТМЦ"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:id="@+id/textView12"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/listName"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearName"
                android:background="@drawable/gradient_bg_done_lt"
                >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="ТМЦ"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:id="@+id/textView5"

                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etName"
                        android:layout_weight="1"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:hint="Название товара"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/linearListSRL"
                android:background="@drawable/gradient_bg_done_lt"
                android:visibility="gone"
                >



                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="№ срн"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:id="@+id/textView16"/>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:id="@+id/listSRL"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSRL"
                android:background="@drawable/gradient_bg_done_lt"
                >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="№ срн"
                        android:id="@+id/textView6"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/etSRL"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:hint="№ серийный"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearINV"
                android:background="@drawable/gradient_bg_done_lt"
                >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="№ инв"
                        android:id="@+id/textView7"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/etScancode"
                        android:layout_weight="1"
                        android:hint="№ инвентарный"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearFisk"
                android:background="@drawable/gradient_bg_done_lt"
                >

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="№ фиск"
                        android:id="@+id/textView8"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etFisknum"
                        android:layout_weight="1"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:hint="№ фискальный"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:textSize="25dp"
                    android:layout_alignLeft="@+id/title_text"
                    android:layout_below="@+id/title_text"
                    android:text="Редактировать"
                    android:layout_gravity="center_horizontal"
                    android:onClick="methodBtnUpdate"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:longClickable="true"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="Сохранить"
                    android:id="@+id/btnSave"
                    android:layout_gravity="center_horizontal"
                    android:onClick="methodBtnSave"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
